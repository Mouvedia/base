{
  "root": true,
  "rules": {

    ////////// Errors //////////

    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-dangle": [2, {
      "arrays": "never",
      "objects": "ignore",
      "imports": "ignore",
      "exports": "ignore",
      "functions": "ignore"
    }],
    "for-direction": 2,
    "keyword-spacing": [2, { "after": true }],
    "no-catch-shadow": 2,
    "no-console": [2, { "allow": ["assert", "debug", "info", "warn", "error", "exception"] }],
    "no-const-assign": 2,
    "no-constant-binary-expression": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-else-return": 2,
    "no-empty": [2, { "allowEmptyCatch": true }],
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,
    "no-invalid-regexp": 2,
    "no-lonely-if": 2,
    "no-loss-of-precision": 2,
    "no-native-reassign": [2, { "exceptions": ["JSON", "isNaN"] }],
    "no-new-native-nonconstructor": 2,
    "no-obj-calls": 2,
    "no-redeclare": 2,
    "no-promise-executor-return": 2,
    "no-shadow-restricted-names": 2,
    "no-spaced-func": 2,
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "no-unreachable-loop": 2,
    "no-unsafe-optional-chaining": 2,
    "no-useless-call": 2,
    "no-useless-computed-key": 2,
    "no-useless-concat": 2,
    "no-useless-escape": 2,
    "no-with": 2,
    "quote-props": [2, "consistent"],
    "require-yield": 2,
    "space-before-blocks": 2,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "switch-colon-spacing": 2,
    "wrap-iife": [2, "any"],
    "yoda": 2,

    ////////// Warnings //////////

    "comma-spacing": 1,
    "computed-property-spacing": 1,
    "default-param-last": 1,
    "dot-location": [1, "property"],
    "eol-last": [1, "always"],
    "eqeqeq": [1, "smart"],
    "func-names": [1, "never"],
    "logical-assignment-operators": [1, "always"],
    "max-params": [1, 4],
    "new-cap": [1, { "capIsNew": false }],
    "no-constant-condition": 1,
    "no-empty-character-class": 1,
    "no-ex-assign": 1,
    "no-extra-bind": 1,
    "no-extra-parens": [1, "all", {
      "returnAssign": false,
      "enforceForNewInMemberExpressions": false
    }],
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-irregular-whitespace": 1,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-negated-condition": 1,
    "no-nonoctal-decimal-escape": 1,
    "no-regex-spaces": 1,
    "no-return-assign": 1,
    "no-return-await": 1,
    "no-throw-literal": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unneeded-ternary": 1,
    "object-shorthand": 1,
    "operator-assignment": [1, "always"],
    "padding-line-between-statements": [1,
      { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*" },
      { "blankLine": "any",    "prev": ["const", "let", "var"], "next": ["const", "let", "var"] }
    ],
    "quotes": [1, "single", { "avoidEscape": true }],
    "semi": [1, "always", { "omitLastInOneLineBlock": true }],
    "spaced-comment": [1, "always", { "markers": ["/"] }]
  }
}